#!/usr/bin/env sh

echo "Running pre-push checks..."

# Run TypeScript type checking
echo "Type checking..."
npm run typecheck
if [ $? -ne 0 ]; then
  echo "Type check failed. Push aborted."
  exit 1
fi

# Run tests
echo "Running tests..."
npm run test
if [ $? -ne 0 ]; then
  echo "Tests failed. Push aborted."
  exit 1
fi

echo "All pre-push checks passed!"
